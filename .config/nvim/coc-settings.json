{
    // Remember to do a ":CocInstall coc-json" first in order to install the json language server extension for coc.nvim
    // Recommended extensions: coc-snippets, coc-json, coc-solargraph, coc-rls, coc-python, coc-java, coc-html, coc-css,
    // coc-emmet, coc-tsserver, coc-eslint, coc-prettier

    "codeLens.enable": true,
    //"coc.preferences.formatOnSaveFiletypes": [java]
    "suggest.minTriggerInputLength": 2,
    
    //////////////////////////////////////////
    // coc-solargraph (Ruby) configurations //
    //////////////////////////////////////////
    // Automatically check if a new version of the Solargraph gem is available.
    "solargraph.autoformat": true, // Enable automatic formatting while typing.
    "solargraph.checkGemVersion": true, // Check if a new version of the Solargraph gem is available. Default is true (recommended).
    "solargraph.completion": true, // Enable autocompletion.
    "solargraph.definitions": true, // Enable go-to-definition.
    "solargraph.diagnostics": true, // Enable diagnostics reporting. See Solargraph Tips for diagnostics options.
    "solargraph.folding": true, // Enable folding ranges.
    "solargraph.formatting": true, // Enable document formatting. The gem currently uses RuboCop for formatting.
    "solargraph.hover": true, // Enable tips on hover.
    "solargraph.logLevel": "info", // The logging level. Options in ascending amount of detail are warn, info, and debug. The default is warn.
    "solargraph.references": true, // Enable finding references.
    "solargraph.rename": true, // Enable symbol renaming.
    "solargraph.symbols": true, // Enable search for document and workspace symbols.
    "solargraph.transport": "socket", // socket (default), stdio, or external. See Transport Options for more information.

    /////////////////////////////
    // coc-java configurations //
    /////////////////////////////
    "java.autobuild.enabled": false,
    "java.codeGeneration.generateComments": true,
    "java.completion.enabled": true,
    "java.completion.guessMethodArguments": true,
    "java.completion.overwrite": true,
    "java.format.onType.enabled": true,
    "java.format.settings.url": "~/.config/nvim/eclipse-java-google-style.xml",
    "java.signatureHelp.enabled": true,

    /////////////////////////////////
    // coc-tsserver configurations //
    /////////////////////////////////
    "tsserver.npm": "/usr/local/bin/npm"
}
